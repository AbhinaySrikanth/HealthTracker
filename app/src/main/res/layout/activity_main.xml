<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FIXED HEADER -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:orientation="vertical"
        android:background="#2196F3"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/statusTv"
            android:text="Checking Google Fit..."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/headerSubtitle"
            android:text=""
            android:textColor="#DDFFFFFF"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="22dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- USAGE WARNING -->
            <TextView
                android:id="@+id/usageWarningTv"
                android:text="Usage Access Needed"
                android:textSize="14sp"
                android:textColor="#CC0000"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- LOGIN SECTION -->
            <LinearLayout
                android:id="@+id/loginSection"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnSignIn"
                    android:text="Sign In to Google Fit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- FIT TRACKING -->
            <Button
                android:id="@+id/btnStart"
                android:text="Start Fit Tracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/hrTv"
                android:text="HR (Fit): --"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/historyHrTv"
                android:text="Stored HR (Fit): --"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/stepsTv"
                android:text="Live Steps: --"
                android:textSize="20sp"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dailyStepsTv"
                android:text="Daily Fit Steps: --"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- PHONE STEPS -->
            <Button
                android:id="@+id/btnPhoneSteps"
                android:text="Start Phone Step Tracking"
                android:layout_marginTop="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/phoneStepsTv"
                android:text="Phone Steps: --"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- CAMERA HR -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="22dp"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnStartCameraHr"
                    android:text="Start Camera HR"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnStopCameraHr"
                    android:text="Stop"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:id="@+id/camHrTv"
                android:text="Camera HR: --"
                android:textSize="20sp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- PHONE USAGE TRACKING -->
            <TextView
                android:id="@+id/unlocksTv"
                android:text="Unlocks Today: --"
                android:textSize="20sp"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/screenTimeTv"
                android:text="Screen Time Today: --"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
